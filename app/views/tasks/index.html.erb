<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to("Add a new task", new_task_path) %>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <h3><%= task.description %></h3>
  <%= link_to("Show all tasks", tasks_path(task)) %>
  <%= link_to("Edit a Task", edit_task_path(task)) %>
  <%= link_to("Delete a Task", task_path(task), method: :delete) %>
<% end %>



